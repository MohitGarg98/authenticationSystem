
<form name="form" id="form" action="/register" method="POST">
    <h3>Create Account</h3>

    <% if(typeof failure_msg != 'undefined' && failure_msg != ''){ %> 
        <div class="alert alert-warning alert-dismissible fade show flashMsg" role="alert">
            <%= failure_msg %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>

    <div class="form-group">
        <label for="exampleInputName1">Name:</label>
        <input type="text" name="name" class="form-control" id="exampleInputName1" placeholder="Enter Name" autocomplete="off">
        <p id="name" class="error"></p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address:</label>
        <input type="email" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" autocomplete="off">
        <p id="username" class="error"></p>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password:</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <p id="password" class="error"></p>
    </div>
    <div class="form-group">
        <label for="exampleInputCPassword1">Confirm Password:</label>
        <input type="password" name="cpassword" class="form-control" id="exampleInputCPassword1" placeholder="Confirm Password">
        <p id="cpassword" class="error"></p>
    </div>
    <input type="submit" class="custom-btn" value="Register">
    <h6 id="sign">Already have an account? <a href="/login">Sign in</a></h6>
</form>
<button id="socialButton">
    <i class="fab fa-google"></i>
    <a href="/auth/google">Login With Google</a>
</button>

