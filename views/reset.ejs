<link rel="stylesheet" href="/css/reset.css">
    
<form action="/reset/<%= token %>" method="post" name="form" id="form"> 
  <h3>Reset Password</h3>  
  <div class="form-group">
      <label for="nPassword">New Password:</label>
      <input type="password" name="newPassword" class="form-control" id="nPassword" placeholder="Enter New Password">
      <p id="newPassword" class="error"></p>
  </div>
  <div class="form-group">
    <label for="cPassword">Retype Password:</label>
    <input type="password" name="confirmPassword" class="form-control" id="cfPassword" placeholder="Retype Password">
    <p id="confirmPassword" class="error"></p>
  </div>
  <input type="submit" class="custom-btn" value="Reset Password" id="submitButton">
</form>
<script src="/js/reset.js"></script>
    